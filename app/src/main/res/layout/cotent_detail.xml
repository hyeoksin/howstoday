<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/postsviewitem_imageview_content"
        android:src="@drawable/com_facebook_button_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorLightGray"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/postsviewitem_user_image"
            android:src="@drawable/icon_profile"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/postsviewitem_user_email"
                android:layout_marginBottom="1dp"
                android:textStyle="bold"
                android:text="melow2@naver.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/postsviewitem_user_location"
                android:text="서울특별시 중랑구 상봉동"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/postsviewitem_favorite_imageview"
                android:src="@drawable/icon_heart_empty_bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/postsviewitem_talk_imageview"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/postsviewitem_comment_imageview"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/postsviewitem_favoritecounter_textview"
            android:layout_toLeftOf="@+id/postsviewitem_commentcounter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/postsviewitem_commentcounter_textview"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="13dp"
            android:text="댓글 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/postsviewitem_explain_textview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>